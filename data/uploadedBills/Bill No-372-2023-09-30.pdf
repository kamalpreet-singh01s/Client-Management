<div class="col display-6 d-flex justify-content-center" style="margin-left:5rem">
            <div class="row">
                <div class="row d-flex justify-content-center">
                    <u>Attachment</u>
                </div>
                <div class="row">
                    <div class="row mt-3">
                        <div class="col d-flex justify-content-center">
                            <a class="" target="_blank" style="text-decoration:none; font-size:small"
                               href="{{url_for('download',filename = record_to_update.filename)}}"><img
                                    src="{{url_for('static', filename='pdf_image.png')}}" id="current_pdf"
                                    width="150px" height="190px"></a>
                        </div>
                        <div class="col form_editable">
                            <button type="button" class="btn btn-success btn-sm" onclick="remove_pdf_file()"
                                    id="add_file" hidden>
                                Update+
                            </button>
                        </div>
                    </div>
                    <div class="row">

                        <div class="row d-flex justify-content-end">
                            <div class="col image-upload" id="pdf_upload" hidden>
                                <label for='file-input' class="mt-3" style="cursor:pointer" id="upload">
                                    <img src="https://via.placeholder.com/300x300.png?text=UPLOAD" width="300px"
                                         height="200px">
                                </label>
                                <input id="file-input" type="file" name="file" onchange="readURL(this)">
                            </div>
                            <div class="col">
                                <div class="row" style="font-size:small" hidden id="x">
                                    <div class="col d-flex justify-content-end">
                                        <button type="button" class="btn btn-danger" onclick="remove_selected_file()">X
                                        </button>
                                    </div>
                                </div>

                                <div class="row" id="selected_pdf">
                                    <div class="col">
                                        <img src="{{url_for('static', filename='pdf_image.png')}}" id="pdf_image"
                                             width="150px" height="190px" hidden>
                                    </div>
                                </div>

                            </div>

                        </div>
                    </div>
                </div>

            </div>


            <div>


            </div>


        </div>





<div style="text-align: center">
            <u><h5 id="total_results"></h5></u>
        </div>